        {% endfor %}
      </div>
    </div>

    <button class="carrousel-btn right" onclick="scrollCarrousel(1)">&#10095;</button>
  </div>

  <script>
    function scrollCarrousel(direction) {
      const container = document.getElementById("carrousel-scroll");
      const scrollAmount = 200;
      container.scrollBy({
        left: direction * scrollAmount,
        behavior: 'smooth'
      });
    }
  </script>
</script>



